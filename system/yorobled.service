[Unit]
Description=yoro ble service
After=syslog.target network.target pigpio.target yoroswd.service
 
[Service]
Type=simple
User=root
WorkingDirectory=/home/pi/raspi-yoro
ExecStart=/usr/bin/node /home/pi/raspi-yoro/ble.js
Restart=on-failure
RestartSec=1
KillMode=process
 
[Install]
WantedBy=multi-user.target

