[Unit]
Description=yoro servo(node) service
After=syslog.target network.target pigpio.target
 
[Service]
Type=simple
User=root
WorkingDirectory=/home/pi/raspi-yoro
ExecStart=/usr/bin/node /home/pi/raspi-yoro/servo.js
Restart=on-failure
RestartSec=10
KillMode=process
 
[Install]
WantedBy=multi-user.target

